<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/black"
            android:src="@drawable/transactions_ic"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/bottom_bar_transactions"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textStyle="bold"
        />



    <Button
        android:id="@+id/text_transaction"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_margin="5dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/rounded_income_title"
        android:textColor="@color/text_gray"
        android:fontFamily="@font/carter_one"
        android:text="@string/trans_fragment_title_incomes"
        android:textSize="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <ImageView
        android:id="@+id/dot_column_0"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/default_dot" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="13dp"
        android:layout_toRightOf="@id/dot_column_0"
        android:text="@string/fragment_step_two_pointOne"

         />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/dot_column_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/default_dot" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/dot_column_1"
            android:textSize="13dp"
            android:text="@string/fragment_step_two_pointTwo"
            />
    </RelativeLayout>




    <ImageView
        android:layout_marginHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_trans_incomes"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/dot_income_cat_0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="111dp"
            android:src="@drawable/blue_dot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/demo_income_cat_0"
            android:layout_toRightOf="@id/dot_income_cat_0"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            />
    </RelativeLayout>

</LinearLayout>
